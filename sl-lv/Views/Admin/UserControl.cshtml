@model sl_lv.Models.UserViewModels
@{
    ViewBag.Title = "User Control";
}

<h2>User Control</h2>
<div class="row">
    <div class="col-lg-2 col-md-2 col-sm-3 hidden-xs">
        <ul class="categories">
            <li><a href="@Url.Action("UserControl","Admin")">User Control</a></li>
            <li><a href="@Url.Action("ManageAds","Admin")">Managing Ads</a></li>
            <li><a href="@Url.Action("AllAdsControl","Admin")">View All Ads</a></li>
        </ul>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
        <div class="row">
            <div class="col-lg-3 col-xs-3 col-sm-3 Title">
                <p>User E-mail</p>
            </div>
            <div class="col-lg-3 col-xs-3 col-sm-1 Title">
                <p>E-mail is Confirme</p>
            </div>
            <div class="col-lg-2 col-xs-3 col-sm-1 Title">
                <p>Role Name</p>
            </div>
            <div class="col-lg-2 col-xs-2 col-sm-2 Title">
                <p>Change</p>
            </div>
            <div class="col-lg-2 col-xs-2 col-sm-2 Title">
                <p>Delete</p>
            </div>
        </div>

        @foreach (var user in Model.AspNetUser)
        {
            <hr class="hrcolored" />
            <div class="row">
                <div class="col-lg-3 col-xs-3 col-sm-3 userinfo">
                    <p>@user.Email</p>
                </div>
                <div class="col-lg-3 col-xs-3 col-sm-1 userinfo">
                    <p>@user.EmailConfirmed</p>
                </div>
                <div class="col-lg-2 col-xs-3 col-sm-1 userinfo">
                    @foreach (var a in user.AspNetRoles)
                    { <p>
        @a.Name
    </p>}
                </div>
                <div class="col-lg-2 col-xs-3 col-sm-2 userinfo">
                    <a href="@Url.Action("EditRole", "Admin",new { @id = user.Id })" class="btn btn-sm btn-warning">Edit Role</a>
                </div>
                <div class="col-lg-2 col-xs-3 col-sm-2 userinfo">
                    <a href="@Url.Action("Delete", "Admin",new { @id = user.Id })" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>

        }

    </div>
</div>
