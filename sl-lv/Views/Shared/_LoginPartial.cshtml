@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("Admin") == true)
            {
                <li>@Html.ActionLink("Admin Panel", "Index", "Admin")</li>
            }
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    languages
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu languages">
                    <li><a href="@Url.Action("SetCulture", "Home", new { @id = "ru" })"><span><img src="~/Pictures/flags/ru.png" /></span> - RU</a></li>
                    <li><a href="@Url.Action("SetCulture", "Home", new { @id = "lv" })"><span><img src="~/Pictures/flags/lv.png" /></span> - LV</a></li>
                    <li><a href="@Url.Action("SetCulture", "Home", new { @id = "en-US" })"><span><img src="~/Pictures/flags/gb.png" /></span> - EN</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })<span c;ass="glyphicon glyphicon-user"></span></li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                languages
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu languages">
                <li><a href="@Url.Action("SetCulture", "Home", new { @id = "ru" })"><span><img src="~/Pictures/flags/ru.png" /></span> - RU</a></li>
                <li><a href="@Url.Action("SetCulture", "Home", new { @id = "lv" })"><span><img src="~/Pictures/flags/lv.png" /></span> - LV</a></li>
                <li><a href="@Url.Action("SetCulture", "Home", new { @id = "en-US" })"><span><img src="~/Pictures/flags/gb.png" /></span> - EN</a></li>
            </ul>
        </li>
    </ul>
}
