@model sl_lv.Models.AdsViewModels
@using GridMvc.Html

@{
    ViewBag.Title = "ManageAds";
}

<h2>Manage Ads</h2>
@using (Html.BeginForm("ChangeAds", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-3 hidden-xs">
            <ul class="categories">
                <li><a href="@Url.Action("UserControl","Admin")">User Control</a></li>
                <li><a href="@Url.Action("ManageAds","Admin")">Managing Ads</a></li>
                <li><a href="@Url.Action("AllAdsControl","Admin")">View All Ads</a></li>
            </ul>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-8">
            <div class="container">
                <label class="control-label mylable">Select Categories want to change</label>

                @if (ViewContext.RouteData.Values["lang"].ToString() == "ru")
                {
                @Html.ListBoxFor(x => x.Advert, new SelectList(Model.Advert, "ID_Advert", "Name_RU"), new { @class = "form-control" })
                }

                @if (ViewContext.RouteData.Values["lang"].ToString() == "lv")
                {
                @Html.ListBoxFor(x => x.Advert, new SelectList(Model.Advert, "ID_Advert", "Name_LV", @Model.Advert), new { @class = "form-control" })
                }

                @if (ViewContext.RouteData.Values["lang"].ToString() != "lv" & ViewContext.RouteData.Values["lang"].ToString() != "ru")
                {
               @Html.ListBoxFor(x => x.Advert, new SelectList(Model.Advert, "ID_Advert", "Name_EN", @Model.Advert), new { @class = "form-control" })
                }
                @Html.ValidationMessageFor(model => model.Advert)
            </div>
            <div class="form-group buttons-bottom">
                <div class="col-lg-3 col-xs-6">
                    <a class="btn btn-lg btn-warning btn-width" href="@Url.Action("Index","Admin")">Back </a>
                </div>
                <div class="ccol-lg-3 col-xs-6">
                    <input type="submit" class="btn btn-lg btn-success btn-width" value="Change" />
                </div>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")





